<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwei.myxiangmu.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>


    <RadioGroup

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:background="#fff"
            android:id="@+id/radioGroup_Main"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_home_page"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_selector"
                android:gravity="center_horizontal"
                android:text="月光茶人" />

            <RadioButton
                android:id="@+id/rb_category"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/topic_selector"
                android:gravity="center_horizontal"
                android:text="优惠" />

            <RadioButton
                android:id="@+id/rb_cart"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/normal_selector"
                android:gravity="center_horizontal"
                android:text="购物车" />

            <RadioButton
                android:id="@+id/rb_mine"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/my_normal_selector"
                android:gravity="center_horizontal"
                android:text="我的" />
        </RadioGroup>

    </RadioGroup>

</LinearLayout>
